{
  // Workbench settings
  "workbench.startupEditor": "none",
  "workbench.fontAliasing": "antialiased",
  "workbench.iconTheme": "Monokai Pro Icons",
  "workbench.colorTheme": "Monokai Pro",
  "workbench.colorCustomizations": {
    "statusBar.background": "#F8D264",
    "statusBar.foreground": "#15202b",
    "statusBar.noFolderBackground": "#F8D264",
    "statusBar.noFolderForeground": "#15202b"
  },
  "workbench.preferredDarkColorTheme": "Monokai Pro",
  "workbench.editor.enablePreview": false,
  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  },

  // Editor settings
  "editor.fontSize": 14,
  "editor.fontFamily": "SFMono-Regular, monospace",
  "editor.linkedEditing": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.minimap.enabled": false,
  "editor.wordWrapColumn": 80,
  "editor.suggestSelection": "first",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.insertSpaces": false,
  "editor.wordWrap": "wordWrapColumn",
  "editor.cursorBlinking": "expand",
  "editor.cursorWidth": 1,
  "editor.lineHeight": 23,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.smoothScrolling": true,
  "editor.lightbulb.enabled": false,
  "editor.detectIndentation": false,
  "editor.accessibilitySupport": "off",
  "editor.inlayHints.fontFamily": "SFMono-Regular, monospace",
  "editor.hover.delay": 700,
  "editor.quickSuggestionsDelay": 1,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.bracketPairColorization.enabled": true,

  // Files settings
  // Deleting indexing of files from .git and node_modules folders
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true
  },

  // Setting to use new type of file watcher
  "files.legacyWatcher": "off",

  // Deleting indexing of files from .git and node_modules folders
  "files.exclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true
  },

  // Deleting node_modules from indexing during the search
  "search.exclude": {
    "**/node_modules": true
  },

  // Breadcrumbs off
  "breadcrumbs.enabled": false,

  // Settings for Terminal
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "'MesloLGS NF'",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.tabs.hideCondition": "never",

  // All Telemetry settings off
  "telemetry.telemetryLevel": "off",

  // Settings for JS and TS
  "javascript.format.insertSpaceAfterConstructor": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Explorer settings
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,

  // Settings for git
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // Settings for saving file after losing focus on document
  "files.autoSave": "onFocusChange",

  // Prettier extension settings
  "prettier.tabWidth": 4,
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "prettier.jsxSingleQuote": true,
  "prettier.useTabs": true,
  "prettier.printWidth": 80,

  // Eslint extensions settigns
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "markdown"
  ],

  // Rest client extension settings
  "rest-client.enableTelemetry": false,
  "rest-client.fontWeight": "lighter",

  // Code spell vocabulary extensions
  "cSpell.userWords": ["omon", "resave"],

  // Project manager extension settings
  "projectManager.git.maxDepthRecursion": 1,
  "projectManager.any.baseFolders": ["/Users/oh1omon/Developer/"],
  "projectManager.any.ignoredFolders": [
    "node_modules",
    "out",
    "typings",
    "test",
    ".git"
  ],

  // TODO Highlight extension settings
  "todohighlight.keywords": [
    {
      "text": "TODO",
      "color": "#15202b",
      "backgroundColor": "#F8D264"
    }
  ],
  "todohighlight.isCaseSensitive": false,

  // GitLens extension settings
  "gitlens.mode.statusBar.enabled": false,

  // YAML support plugin telemetry off
  "redhat.telemetry.enabled": false
}
